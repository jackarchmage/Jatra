<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup">
    <LinearLayout
        android:id="@+id/container_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal|top"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container_frame3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:id="@+id/container_frame4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-3dp"
                android:layout_marginBottom="-3dp"
                android:clipToPadding="false"
                android:gravity="left|center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp">

                <ImageView
                    android:id="@+id/image_arrow_left"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/baseline_arrow_back_24" />

                <TextView
                    android:id="@+id/text_enter_your_details"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="-3dp"
                    android:layout_marginBottom="-3dp"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Enter Your Details"
                    android:textColor="#FF151515"
                    android:fontFamily="@font/interweight"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/text_first_name"
            android:layout_width="296dp"
            android:layout_height="18dp"
            android:layout_marginTop="26.5dp"
            android:layout_marginBottom="-0.5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="First Name"
            android:fontFamily="@font/interweight"
            android:textColor="#FF282828"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edt_firstname"
            android:layout_width="296dp"
            android:layout_height="48dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bottom_nav_boundary"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:textColor="@color/black"
            android:paddingRight="16dp"
            android:paddingTop="12dp">
        </EditText>

        <TextView
            android:id="@+id/text_surname"
            android:layout_width="296dp"
            android:layout_height="18dp"
            android:layout_marginTop="14.5dp"
            android:layout_marginBottom="-0.5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Surname"
            android:fontFamily="@font/interweight"
            android:textColor="#FF282828"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edt_surname"
            android:layout_width="296dp"
            android:layout_height="48dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bottom_nav_boundary"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:textColor="@color/black"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp">
        </EditText>

        <TextView
            android:id="@+id/text_address"
            android:layout_width="296dp"
            android:layout_height="18dp"
            android:layout_marginTop="14.5dp"
            android:layout_marginBottom="-0.5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Address "
            android:textColor="#FF282828"
            android:fontFamily="@font/interweight"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edt_address"
            android:layout_width="296dp"
            android:layout_height="48dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bottom_nav_boundary"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp">

        </EditText>

        <TextView
            android:id="@+id/text_address_line_34"
            android:layout_width="296dp"
            android:layout_height="18dp"
            android:layout_marginTop="14.5dp"
            android:layout_marginBottom="-0.5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Address Line 2"
            android:textColor="#FF282828"
            android:fontFamily="@font/interweight"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edt_add2"
            android:layout_width="296dp"
            android:layout_height="48dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bottom_nav_boundary"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:textColor="@color/black"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp">


        </EditText>

        <LinearLayout
            android:id="@+id/container_frame12"
            android:layout_width="296dp"
            android:layout_height="73dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:gravity="left|top"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/container_text_field4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-0.5dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:gravity="left|top"
                android:orientation="vertical"
                android:paddingTop="0.5dp">

                <TextView
                    android:id="@+id/text_pincode"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_marginTop="-0.5dp"
                    android:layout_marginBottom="-0.5dp"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Pincode"
                    android:textColor="#FF282828"
                    android:fontFamily="@font/interweight"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edt_pin"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"
                    android:background="@drawable/bottom_nav_boundary"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp">

                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_text_field5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="-0.5dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:gravity="left|top"
                android:orientation="vertical"
                android:paddingTop="0.5dp">

                <TextView
                    android:id="@+id/text_city"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_marginTop="-0.5dp"
                    android:layout_marginBottom="-0.5dp"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="City"
                    android:fontFamily="@font/interweight"
                    android:textColor="#FF282828"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edt_city"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bottom_nav_boundary"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="12dp"
                    android:paddingLeft="16dp"
                    android:textColor="@color/black"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp">


                </EditText>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/text_state"
            android:layout_width="296dp"
            android:layout_height="18dp"
            android:layout_marginTop="14.5dp"
            android:layout_marginBottom="-0.5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="State"
            android:textColor="#FF282828"
            android:fontFamily="@font/interweight"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edt_State"
            android:layout_width="296dp"
            android:layout_height="48dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bottom_nav_boundary"
            android:gravity="left|center_vertical"
            android:textColor="@color/black"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp">


        </EditText>

        <ImageView
            android:id="@+id/container_line"
            android:layout_width="340dp"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            android:src="@color/loanbg_color" />

        <TextView
            android:id="@+id/text_contact"
            android:layout_width="296dp"
            android:layout_height="18dp"
            android:layout_marginTop="14.5dp"
            android:layout_marginBottom="-0.5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:fontFamily="@font/interweight"
            android:text="Contact"
            android:textColor="#FF282828"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edt_contact"
            android:layout_width="296dp"
            android:layout_height="48dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bottom_nav_boundary"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:textColor="@color/black"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp">


        </EditText>

        <TextView
            android:id="@+id/text_email"
            android:layout_width="296dp"
            android:layout_height="18dp"
            android:layout_marginTop="14.5dp"
            android:layout_marginBottom="-0.5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Email"
            android:textColor="#FF282828"
            android:fontFamily="@font/interweight"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="296dp"
            android:layout_height="48dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bottom_nav_boundary"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp">

        </EditText>

        <TextView
            android:id="@+id/text_password"
            android:layout_width="296dp"
            android:layout_height="18dp"
            android:layout_marginTop="14.5dp"
            android:layout_marginBottom="-0.5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Password"
            android:fontFamily="@font/interweight"
            android:textColor="#FF282828"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edt_pwd"
            android:layout_width="296dp"
            android:layout_height="48dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bottom_nav_boundary"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:inputType="textPassword"
            android:paddingTop="12dp">

        </EditText>

        <TextView
            android:id="@+id/text_password_requirement"
            android:layout_width="296dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Your password must include:\n"
            android:textColor="#FFA1A1A1"
            android:fontFamily="@font/interweight"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_password_requirement_details"
            android:layout_width="191dp"
            android:layout_height="90dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:lineHeight="15dp"
            android:text="@string/signup_bullet"
            android:textColor="#FFA1A1A1"
            android:fontFamily="@font/interweight"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/container_checkbox_and_label"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="22dp"
            android:layout_gravity="center_horizontal"
            android:clipToPadding="false"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp">

            <CheckBox
                android:id="@+id/image_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/black"
                />

            <TextView
                android:id="@+id/text_terms_and_conditions"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:gravity="left|top"
                android:includeFontPadding="false"
                android:lineHeight="19.6dp"
                android:fontFamily="@font/interweight"
                android:text="I confirm that I have read and accept the terms and conditions and privacy policy."
                android:textColor="#FF282828"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/verification_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_selector"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="20.5dp"
            android:paddingLeft="65dp"
            android:paddingRight="65dp"
            android:paddingTop="20.5dp">

            <TextView
                android:id="@+id/text_proceed_to_payment"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:gravity="center_horizontal|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:fontFamily="@font/interweight"
                android:text="CONTINUE TO VERIFICATION "
                android:textColor="#FFB8B8B8"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>


</ScrollView>