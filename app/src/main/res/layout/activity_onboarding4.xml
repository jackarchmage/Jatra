<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Onboarding4">
    <LinearLayout
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/rmki10pcdvbk"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/rzvbx3fmnszi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/onboarding4bground"
                    android:scaleType="fitXY"
                    />
                <LinearLayout
                    android:id="@+id/r0urpuhzrm0g"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="121dp"
                    android:layout_marginTop="130dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/rznl33omvn6"
                        android:textColor="#282828"
                        android:textSize="23sp"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="17dp"
                        android:layout_marginHorizontal="30dp"
                        android:layout_height="0dp"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Get your Approved \nLoan Drawings In No Time!"
                        />
                    <LinearLayout
                        android:id="@+id/rke5a1znv5li"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="17dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/r10bnza32jk6b"
                            android:layout_width="wrap_content"
                            android:layout_height="6dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/fourthstep"
                            android:scaleType="fitXY"
                            />

                    </LinearLayout>
                    <Button
                        android:id="@+id/btnLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="21dp"
                        android:paddingHorizontal="76dp"
                        android:clickable="true"
                        android:text="LOG IN AS GUEST"
                        android:background="@drawable/onboardingbtn"
                        android:textColor="@color/white"
                        android:focusable="true"
                        android:orientation="vertical">

                    </Button>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Don't Have an Account"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CREATE ACCOUNT"
                        android:id="@+id/tvCreate"
                        android:textColor="@color/black"
                        android:gravity="center"
                        />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>