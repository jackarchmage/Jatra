<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AuthenticationFragment">
    <FrameLayout
        android:id="@+id/container_iphone_pro_max"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/container_frame1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="-3dp"
            android:layout_gravity="top|left"
            android:clipToPadding="false"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:paddingTop="3dp">

            <ImageView
                android:id="@+id/image_frame_arrow_left"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerInside"
                android:src="@drawable/baseline_arrow_back_24" />

            <TextView
                android:id="@+id/text_sign_up_login"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="-3dp"
                android:layout_marginBottom="-3dp"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:fontFamily="@font/interweight"
                android:singleLine="true"
                android:text="View your design in AR"
                android:textColor="#FF000000"
                android:textStyle="bold"
                android:textSize="24dp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/container_frame2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="102dp"
            android:layout_gravity="top|center_horizontal">

            <ImageView
                    android:id="@+id/image_group_rectangle1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/loginbg" />

            <TextView
                android:id="@+id/container_frame3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="150dp"
                android:includeFontPadding="false"
                android:singleLine="false"
                android:padding = "10dp"
                android:layout_marginHorizontal="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/interweight"
                android:text="Ready to visualize your design"
                android:textColor="#FFFFFFFF"
                android:textSize="24dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginHorizontal="10dp"
                android:layout_gravity="bottom|center"
                android:includeFontPadding="false"
                android:layout_marginBottom="90dp"
                android:singleLine="false"
                android:fontFamily="@font/interitalic"
                android:textStyle="bold"
                android:text="Upload your 3D model to get started, and choose between Tabletop or Scale view."
                />

            <LinearLayout
                android:id="@+id/container_frame4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_gravity="bottom|center_horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/btn_visualize"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundedbutton_white"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/text_button_log_in"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal|center_vertical"
                        android:includeFontPadding="false"
                        android:maxLines="3"
                        android:singleLine="false"
                        android:fontFamily="@font/interweight"
                        android:text="Proceed to visualize"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>
                <View
                    android:layout_width="20dp"
                    android:layout_height="64dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/btn_upload"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundedbutton_white"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="20.5dp"
                    android:paddingTop="20.5dp">

                    <TextView
                        android:id="@+id/txt_btn_upload"
                        android:layout_width="match_parent"
                        android:layout_height="23dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:fontFamily="@font/interweight"
                        android:text="Upload"
                        android:textColor="#FF282828"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>


</FrameLayout>