<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Onboarding1">
    <LinearLayout
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/rjnm74o89iso"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ro6gidyp74hd"
                    android:layout_width="match_parent"
                    android:layout_height="465dp"
                    android:layout_marginBottom="25dp"
                    android:src="@drawable/onboarding1bground"
                    android:scaleType="fitXY"
                    />
                <LinearLayout
                    android:id="@+id/rocu37exk9h9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="121dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/r5yo952406dw"
                        android:textColor="#282828"
                        android:textSize="23sp"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="17dp"
                        android:layout_marginHorizontal="30dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Bring Your Ideas to \nLife with AR"
                        />
                    <LinearLayout
                        android:id="@+id/r8teh6rj96q"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="17dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/rvyj4a6apxn"
                            android:layout_width="wrap_content"
                            android:layout_height="6dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/firststep"
                            android:scaleType="fitXY"
                            />

                    </LinearLayout>
                    <Button
                        android:id="@+id/btnNext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="21dp"
                        android:paddingHorizontal="76dp"
                        android:clickable="true"
                        android:text="NEXT"
                        android:background="@drawable/onboardingbtn"
                        android:textColor="@color/white"
                        android:focusable="true"
                        android:orientation="vertical">

                    </Button>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>