<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Transparent fill -->
    <solid android:color="@android:color/transparent" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Stroke is dashed: use a pathEffect on API 21+ via stroke dashWidth/dashGap -->
    <stroke
        android:width="2dp"
        android:color="#333333"
        android:dashWidth="8dp"
        android:dashGap="6dp" />

    <!-- padding so inner content doesn't hit the border -->
    <padding
        android:left="6dp"
        android:top="6dp"
        android:right="6dp"
        android:bottom="6dp" />
</shape>
